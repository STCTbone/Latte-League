<h1>Login</h1>

<% flash.each do |name, msg| %>
  <%= content_tag :div, msg, :id => "flash_#{name}" %>
<% end %>

<%= form_tag "sessions" do %>
	<%= label_tag :email %>
	<%= text_field_tag :email, params[:email] %>

	<%= label_tag :password %>
	<%= password_field_tag :password %>
	<br>
	<%= submit_tag "Log In", disable_with: "Submitting...", :class => "btn" %>
<% end %>
