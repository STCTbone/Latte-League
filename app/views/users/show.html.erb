<% content_for :breadcrumb do %>
  <li class="active"> Home / User</li>
<% end %>

<h1>User Details</h1>



<div class="well">

  <%= link_to 'Show all users', users_path, :class => 'btn btn-primary' %>

</div>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Email</th>
      <th>First Name</th>
      <th>Last Name</th>

      <th>&nbsp;</th>
    </tr>
  </thead>
  <tbody>
      <tr>
        <td><%= @user.email %></th>        
        <td><%= @user.first_name %></th>        
        <td><%= @user.last_name %></th>        
    
        <td>
  <%= link_to 'Edit', edit_user_path(@user), :class => 'btn btn-primary' %>
  <%= link_to 'Delete', @user, :class => 'btn btn-danger', :confirm => 'Are you sure?', :method => :delete  %>
        </td>
      </tr>
  </tbody>
</table>
