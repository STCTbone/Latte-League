<% content_for :breadcrumb do %>
  <li class="active">Home / new user</li>
<% end %>

<%= simple_form_for(@user) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email %>
    <%= f.input :password %>
    <%= f.input :first_name %>
    <%= f.input :last_name %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to "Go back", users_path, :class => 'btn btn-success' %>

    </div>
<% end %>