<% if session[:is_vendor] %>
<h1>Listing categories</h1>

<table class="table table-striped table-bordered table-hover">
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @categories.each do |category| %>
  <tr>
    <td><%= category.name %></td>
    <td><%= link_to 'Show', category, :class => 'btn btn-primary' %></td>
    <td><%= link_to 'Edit', edit_category_path(category), :class => 'btn btn-success' %></td>
    <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Category', new_category_path %>
<% end %>
