<% content_for :breadcrumb do %>
  <li class="active">Home / Items</li>
<% end %>

<h1>Menu</h1>
<h5>Browse and enjoy!</h5>
<% if session[:is_vendor] %>
  <div class="well">
    <%= link_to 'Create a new item', new_item_path, :class => 'btn btn-success' %>
  </div>
<% end %>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Country</th>
      <th>City</th>
      <th>Price</th>
      <th>Category</th>
      <% if session[:is_vendor] %>
      <th>Is available?</th>
      <% end %>
      <% if session[:is_vendor] %>
        <th>&nbsp;</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.country %></td>
        <td><%= item.city %></td>
        <td>$<%= item.price %></td>
        <td><%= item.category.name %></td>


  <% if session[:is_vendor] %>
    <td><%= item.is_available %></td>
    <% end %>

  <% if session[:is_vendor] %>
        <td align='right'>
    <%= link_to 'Edit', edit_item_path(item), :class => 'btn btn-primary' %>
    <%= link_to 'Delete', item, :class => 'btn btn-danger', :confirm => 'Are you sure?', :method => :delete  %>

        </td>
  <% end %>
  <% end %>
      </tr>
  </tbody>
</table>
