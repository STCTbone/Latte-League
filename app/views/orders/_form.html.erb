<% content_for :breadcrumb do %>
  <li class="active">Home / new order</li>
<% end %>

<%= simple_form_for(@order) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :user_id, :as => :hidden, :input_html => { :value => session[:user_id] }%>
    <%= f.input :status, :as => :hidden, :input_html => { :value => 'In Progress' }%>
    <%= f.label "Total Price: $#{@order.total}" %>
    <%= f.input :instructions %>
    <%= f.input :pickup_time %>

  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to "Go back", orders_path, :class => 'btn btn-success' %>

    </div>
<% end %>

