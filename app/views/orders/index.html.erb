

<% content_for :breadcrumb do %>
  <li class="active">Home / Orders</li>
<% end %>

<h1>Orders</h1>
<h5>List of Orders in the system</h5>
<div class="well">
  <%= link_to 'Create a new order', new_order_path, :class => 'btn btn-success' %>
</div>



<table class="table table-bordered table-striped table-hover">
  <thead>
    <tr>
      <th>User</th>
      <th>Total Price</th>
      <th>Instructions</th>
      <th>Status</th>
      <th>Pickup Time</th>
      <th>&nbsp;</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.user.email %></td>
        <td><%= order.total_price %></td>
        <td><%= order.instructions %></td>
        <td><%= order.status %></td>
        <td><%= order.pickup_time %></td>

        <td align='right'>
  <%= link_to 'Edit', edit_order_path(order), :class => 'btn btn-primary' %>
  <%= link_to 'Delete', order, :class => 'btn btn-danger', :confirm => 'Are you sure?', :method => :delete  %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

